# =============================================================================
# Environment Variables for iDRAC NetBox Importer
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!
#
# Usage:
#   cp .env.example .env
#   # Edit .env with your credentials
#   docker-compose up
# =============================================================================

# -----------------------------------------------------------------------------
# iDRAC Credentials (REQUIRED)
# -----------------------------------------------------------------------------
IDRAC_DEFAULT_USER=root
IDRAC_DEFAULT_PASS=your-idrac-password-here

# -----------------------------------------------------------------------------
# NetBox Integration (OPTIONAL - only needed for -sync)
# -----------------------------------------------------------------------------
NETBOX_URL=https://netbox.yourdomain.com
NETBOX_TOKEN=your-netbox-api-token-here

# -----------------------------------------------------------------------------
# Application Configuration (OPTIONAL - has defaults)
# -----------------------------------------------------------------------------
IDRAC_LOG_LEVEL=info
IDRAC_LOG_FORMAT=console
IDRAC_CONCURRENCY=5
IDRAC_DEFAULT_TIMEOUT=60

# -----------------------------------------------------------------------------
# Build Information (OPTIONAL - for local builds)
# -----------------------------------------------------------------------------
VERSION=dev
BUILD_TIME=
GIT_COMMIT=
